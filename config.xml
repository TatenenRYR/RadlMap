<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.eierhuette" version="1.0.0"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <name>RadlMap</name>
  <description>Fahrrad Navigation</description>
  <author email="you@example.com" href="https://example.com">RadlMap Dev</author>
  <content src="index.html" />
  <plugin name="cordova-plugin-geolocation" />
  <access origin="*" />
  <allow-intent href="*" />
  <preference name="orientation" value="portrait" />
  <platform name="android">
    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/uses-permission">
      <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    </edit-config>
  </platform>
</widget>
